<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bird_circle_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/bird_common_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bird_circle_image"
        android:layout_toRightOf="@+id/bird_circle_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@+id/bird_circle_image"
        android:text="Test"/>

    <TextView
        android:id="@+id/bird_latin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Text"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/bird_common_name"
        android:layout_alignLeft="@+id/bird_common_name"
        android:layout_alignStart="@+id/bird_common_name"/>

    <CheckBox
        android:id="@+id/bird_viewed_chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bird_latin_name"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:buttonTint="@color/colorLightblue"/>

</RelativeLayout>
